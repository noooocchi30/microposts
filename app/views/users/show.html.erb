<div class="container">
 <div class="row col-md-2">
  <h1>
   <%= gravatar_for @user %>
   <%= @user.name %>
  </h1>
 </div>

<table class="table table-striped table-bordered">
  
  <tr>
    <th>名前</th>
    <td><%= @user.name %></td>
  </tr>
  
  <tr>
    <th>メールアドレス</th>
    <td><%= @user.email %></td>
  </tr>
   <tr>
    <th>プロフィール</th>
    <td><%= @user.profile %></td>
  </tr>
   <tr>
    <th>地域</th>
    <td><%= @user.region %></td>
  </tr>
</table>
</div>